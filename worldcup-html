                    </div>`;
            }
        }
        createGrid('hilo-grid', 'HILO');
        createGrid('func-grid', 'FUNC');
        createGrid('box-grid', 'BOX');
        createGrid('step1-grid', 'STEP');
        createGrid('step2-grid', 'STEP');
