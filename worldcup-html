        function createGrid(containerId, categoryName) {
            const container = document.getElementById(containerId);
            for(let i = 1; i <= 6; i++) {
                container.innerHTML += `
                    <div class="card">
                        <div class="photo-slot">TFA</div>
                        <div class="name">${categoryName} ${i}</div>
